{{!
    @template blocks_forumfeed/post
    Example context (json):
    {
        "course": "My ace course",
        "forum": "My ace forum",
        "img": "https://randomuser.me/api/portraits/women/71.jpg",
        "username": "My ace forum",
        "role": "Teacher",
        "url": "moodlecourse?id=foo",
        "title": "My forum post title",
        "date": "6:30pm 13th Oct",
    }

}}
<small>{{course}} / {{forum}}</small>
<br>

<div class="d-flex">
    <div class="bg-cover rounded-circle bg-light mr-2 flex-shirk-0" style="width: 3rem;
    height: 3rem;
    background-image: url('{{{img}}}');
    "></div>
    <div>
        <small>{{{username}}}</small>
        <small class="badge badge-dark">{{{ role }}}</small>
    </div>
</div>
<a href="{{ url }}">{{ title }}</a>
<br>
<small>{{{date}}}</small>
